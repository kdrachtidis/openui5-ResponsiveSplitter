<mvc:View controllerName="DemoUXapp.controller.MainNavigation.ResponsiveSplitter" height="100%" 
    xmlns:l="sap.ui.layout" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">
    <l:ResponsiveSplitter defaultPane="default">
        <l:PaneContainer>
            <l:SplitPane requiredParentWidth="400" id="default">
                <Page title="Left pane container">

                </Page>
            </l:SplitPane>
            <l:PaneContainer orientation="Vertical">
                <l:SplitPane requiredParentWidth="600">
                    <Page title="Right pane container, top split pane">

                    </Page>
                </l:SplitPane>
                <l:SplitPane requiredParentWidth="800">
                    <Page title="Right pane container, bottom split pane">

                    </Page>
                </l:SplitPane>
            </l:PaneContainer>
        </l:PaneContainer>
    </l:ResponsiveSplitter>
</mvc:View>